{% extends 'base.html.twig' %}

{% block body %}

    <div class="max-w-md mx-auto mt-8 w-full bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Create New Album</h1>

        {{ form_start(form) }}

        <!-- Title Field -->
        <div class="mb-4">
            {{ form_label(form.title, 'Album Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'w-full mt-1'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.shootDate, 'Shooting Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
            {{ form_widget(form.shootDate, {'attr': {'class': 'w-full mt-1'}}) }}
            {{ form_errors(form.shootDate) }}
        </div>

        <!-- Submit Button -->
        <div class="mt-6">
            {{ form_widget(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>


{% endblock %}